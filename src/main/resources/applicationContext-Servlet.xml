<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
				http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
				http://www.springframework.org/schema/context 
				http://www.springframework.org/schema/context/spring-context-4.1.xsd
				http://www.springframework.org/schema/mvc 
				http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">
		
	
	<!-- 使用SpringMVC的注解驱动 -->
	<mvc:annotation-driven>
	 	<!-- 配置消息转换器 -->
        <mvc:message-converters>
        	<!-- 解决 responseBody返回String乱码问题 -->
        	<bean class="org.springframework.http.converter.StringHttpMessageConverter">
        		<property name="supportedMediaTypes" value="text/html;charset=UTF-8"/>
        	</bean>
        	<!-- springmvc与fastjson整合返回json数据 -->
        	<bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
        		<property name="charset" value="UTF-8"/>
        		<property name="features" value="WriteMapNullValue"/>
        	</bean>
        </mvc:message-converters>
	</mvc:annotation-driven>
	<!-- 配置拦截器 -->
    <mvc:interceptors>
    
    	<!-- 耗时统计拦截器 -->
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="com.jinran.webbase.web.interceptor.TimekeepingInterceptor" />
		</mvc:interceptor>
    	
    	<!-- 权限拦截器  -->
		<mvc:interceptor>
			<mvc:mapping path="/admin/**" /> 
			
			<!-- <mvc:exclude-mapping path="/admin/system/**"/> -->
			<mvc:exclude-mapping path="/admin/system/**"/>
			<bean class="com.jinran.webbase.web.interceptor.PermissionInterceptor"/>
		</mvc:interceptor>
		
    </mvc:interceptors>
	<!-- 使用默认的servlet处理器处理静态资源 -->
	<mvc:default-servlet-handler/>
	<!-- 配置视图解析器，默认使用JSTL标签 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" /> <!-- 前置代号 -->
		<property name="suffix" value=".jsp" /><!--后缀代号    可为空,方便实现自已的依据扩展名来选择视图解释类的逻辑 -->
	</bean>
	<!-- 配置上传文件解析器 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
    	<!-- 上传文件的编码方式 -->
		<property name="defaultEncoding" value="UTF-8"/>
		<!-- 上传文件的大小 -->
		<property name="maxUploadSize" value="20971520"/><!-- 20M -->
	</bean>
	<!-- 配置全局异常处理解析器 -->
	<bean class="com.jinran.webbase.web.resolver.CustomHandlerExceptionResolver"/>
	<!-- 使用自动扫描组件，注入controller -->
	<context:component-scan base-package="com.jinran.webbase.web.controller" />
	
	
</beans>